<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.dselent.course_load_scheduler.client.view">
	
<ui:style>
	.loading-glass-panel
	{
		position:fixed;
		width:100%;
		height:100%;
		visibility:hidden;
	}
		
	.gwt-popup-panel-glass
	{
		background-color:rgb(0, 0, 0);
		opacity:0.8;
	}
		
	.loading-image
	{
		position:fixed;
		display:block;
    	margin-left:50%;
    	margin-right:50%;
    	z-index: 1;
    	visibility:hidden;
	}
	
</ui:style>

<g:VerticalPanel>
	<d:MenuTabs ui:field="menuTabs"/>
	<g:HTMLPanel ui:field="mainPanel"/>
	<g:Image ui:field="loadingImage" url="WEB-INF/classes/org/dselent/course_load_scheduler/client/view/images/loading.gif" addStyleNames="{style.loading-image}"/>
	<g:PopupPanel ui:field="glassLoadingPanel" addStyleNames="{style.loading-glass-panel}, {style.gwt-popup-panel-glass}"/>
</g:VerticalPanel>

</ui:UiBinder> 